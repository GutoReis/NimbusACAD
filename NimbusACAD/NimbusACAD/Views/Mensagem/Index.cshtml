@model IEnumerable<NimbusACAD.Models.DB.Negocio_Notificacao>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Escrever mensagem", "Escrever")
</p>
<table class="table">
    <tr>
        <th>Emissor</th>
        <th>@Html.DisplayNameFor(model => model.Assunto)</th>
        @*<th>@Html.DisplayNameFor(model => model.Corpo)</th>*@
        <th>@Html.DisplayNameFor(model => model.Lida)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Negocio_Pessoa.Primeiro_Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.Assunto)</td>
        @*<td>@Html.DisplayFor(modelItem => item.Corpo)</td>*@
        <td>@Html.DisplayFor(modelItem => item.Lida)</td>
        <td>
            @Html.ActionLink("Ver mensagem", "Detalhes", new { id=item.Notificacao_ID }) |
            @Html.ActionLink("Apagar mensagem", "Deletar", new { id=item.Notificacao_ID })
        </td>
    </tr>
}
</table>

