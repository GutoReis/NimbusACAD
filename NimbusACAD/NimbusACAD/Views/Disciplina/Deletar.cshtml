@model NimbusACAD.Models.DB.Negocio_Disciplina

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Você tem certeza de que deseja deletar esta disciplina, esta operação não poderá ser desfeita?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Módulo</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Modulo.Modulo_Nome)</dd>

        <dt>Nome da Disciplina</dt>
        <dd>@Html.DisplayFor(model => model.Disciplina_Nome)</dd>

        <dt>Descrição</dt>
        <dd>@Html.DisplayFor(model => model.Descricao)</dd>

        <dt>Total de aulas dadas</dt>
        <dd>@Html.DisplayFor(model => model.Tot_Aulas_Dadas)</dd>

        <dt>Carga horária</dt>
        <dd>@Html.DisplayFor(model => model.Carga_Horaria)</dd>

        <dt>Professor</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Funcionario.Negocio_Pessoa.Primeiro_Nome) @Html.DisplayFor(mod => mod.Negocio_Funcionario.Negocio_Pessoa.Sobrenome)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}