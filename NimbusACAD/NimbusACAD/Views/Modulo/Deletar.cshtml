@model NimbusACAD.Models.DB.Negocio_Modulo

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Você tem certeza de que deseja deletar este módulo, esta operação não poderá ser desfeita?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Modulo_Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Modulo_Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Max_Alunos)</dt>
        <dd>@Html.DisplayFor(model => model.Max_Alunos)</dd>

        <dt>@Html.DisplayNameFor(model => model.Tot_Inscritos)</dt>
        <dd>@Html.DisplayFor(model => model.Tot_Inscritos)</dd>

        <dt>@Html.DisplayNameFor(model => model.Carga_Horaria)</dt>
        <dd>@Html.DisplayFor(model => model.Carga_Horaria)</dd>

        <dt>@Html.DisplayNameFor(model => model.Negocio_Curso.Curso_Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Curso.Curso_Nome)</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Detalhes", new { id = Model.Modulo_ID })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}