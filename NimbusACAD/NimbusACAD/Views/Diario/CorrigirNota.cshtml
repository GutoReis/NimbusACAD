@model NimbusACAD.Models.ViewModels.LancarNotaViewModel

@{
    ViewBag.Title = "CorrigirNota";
}

<h2>Corrigir nota</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VinculoID)
        @Html.HiddenFor(model => model.MatriculaID)
        @Html.HiddenFor(model => model.AlunoNm)

        <div class="form-group">
            @Html.LabelFor(model => model.AlunoNm, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DisplayFor(model => model.AlunoNm)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nota1, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Nota1, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Nota1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nota2, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Nota2, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Nota2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
