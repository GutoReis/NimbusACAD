@model NimbusACAD.Models.ViewModels.FrequenciaViewModel

@{
    ViewBag.Title = "Chamada";
}

<h2>Chamada</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div>
    <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DisciplinaID)
        @Html.HiddenFor(model => model.ProfessorID)
    <div class="col-md-4">
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.DtAula, "Data da aula: ", htmlAttributes: new { @class = "control-label" })
            
                @Html.EditorFor(model => model.DtAula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DtAula, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.QtdeAulas,"Quantidade de aulas: ", htmlAttributes: new { @class = "control-label" })
               
                @Html.EditorFor(model => model.QtdeAulas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QtdeAulas, "", new { @class = "text-danger" })
             </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.AulaMinistrada,"Aula minitrada", htmlAttributes: new { @class = "control-label" })

                @Html.TextAreaFor(model => model.AulaMinistrada, new { @class = "form-control", @rows = "6"})
                @Html.ValidationMessageFor(model => model.AulaMinistrada, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <p>Alunos presentes</p>

        <div>
            @Html.ListBoxFor(model => model.MatriculasPresentes, Model.Matriculas, new { @class = "form-control", @size="12"})
        </div>
        <div>
            <br /><input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
