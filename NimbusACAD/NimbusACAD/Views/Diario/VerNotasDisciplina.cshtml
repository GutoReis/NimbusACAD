@model NimbusACAD.Models.ViewModels.ListaNotasDisciplinaViewModel

@{
    ViewBag.Title = "VerNotasDisciplina";
}

<h2>Ver notas</h2>
<br />
<h4>Ver nortas dos alunos de @Html.DisplayFor(model => model.DisciplinaNm)</h4>

<table class="table">
    <tr>
        <td>Aluno</td>
        <td>Nota 1</td>
        <td>Nota 2</td>
        <td>Media Final</td>
        <td>Frequencia</td>
        <td></td>
    </tr>

    @foreach (var item in Model.notas)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AlunoNm)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota1)</td>
            <td>@Html.DisplayFor(modelItem => item.Nota2)</td>
            <td>@Html.DisplayFor(modelItem => item.MediaFinal)</td>
            <td>@Html.DisplayFor(modelItem => item.Frequencia)</td>
            <td>@Html.ActionLink("Corrigir nota", "CorrigirNota", new { id = item.VinculoID })</td>
        </tr>
    }
</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}