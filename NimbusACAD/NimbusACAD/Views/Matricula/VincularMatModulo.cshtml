@model NimbusACAD.Models.ViewModels.CriarVinculoModuloViewModel

@{
    ViewBag.Title = "VincularMatModulo";
}

<h2>Vincular Módulo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MatriculaID)
        <div class="form-group">
            @Html.LabelFor(model => model.ModuloID, "Módulo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ModuloID", ViewBag.Modulos as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModuloID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StatusVinculo, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{var listItem = new List<SelectListItem>
                    {
                      new SelectListItem { Text = "Em Curso", Value = "Em Curso" },
                      new SelectListItem { Text = "Dependencia", Value = "Dependencia" },
                      new SelectListItem { Text = "Matricula trancada", Value = "Matricula trancada" },
                      new SelectListItem { Text = "Reprovado", Value = "Reprovado" },
                      new SelectListItem { Text = "Aprovado", Value = "Aprovado" }
                    };
                }
                @Html.DropDownList("StatusVinculo", new SelectList(listItem, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusVinculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
