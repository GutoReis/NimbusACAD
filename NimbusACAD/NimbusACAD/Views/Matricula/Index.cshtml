@model IEnumerable<NimbusACAD.Models.DB.Negocio_Matricula_Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>Aluno</th>
        <th>Curso</th>
        <th>Ano de ingresso</th>
        <th>Ativo</th>
        <th>Deve documento</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Negocio_Pessoa.Primeiro_Nome) @Html.DisplayFor(modelItem => item.Negocio_Pessoa.Sobrenome)</td>
        <td>@Html.DisplayFor(modelItem => item.Negocio_Curso.Curso_Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.Ano)</td>
        <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
        <td>@Html.DisplayFor(modelItem => item.Deve_Documento)</td>
        <td>
            @Html.ActionLink("Ver aluno", "VerAluno", new { id = item.Matricula_ID})
        </td>
    </tr>
}

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}