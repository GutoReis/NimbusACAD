@model NimbusACAD.Models.DB.Negocio_Vinculo_Modulo

@{
    ViewBag.Title = "VincularModulo";
}

<h2>Vincular Módulo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Matricula_ID)
        <div class="form-group">
            @Html.LabelFor(model => model.Modulo_ID, "Modulo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Modulo_ID", ViewBag.Modulos as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Modulo_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status_Vinculo, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{var listItem = new List<SelectListItem>
                    {
                      new SelectListItem { Text = "Em Curso", Value = "Em Curso" },
                      new SelectListItem { Text = "Dependencia", Value = "Dependencia" },
                      new SelectListItem { Text = "Matricula trancada", Value = "Matricula trancada" },
                      new SelectListItem { Text = "Reprovado", Value = "Reprovado" },
                      new SelectListItem { Text = "Aprovado", Value = "Aprovado" }
                    };
                }
                @Html.DropDownList("Status_Vinculo", new SelectList(listItem, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status_Vinculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Avançar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
