@model NimbusACAD.Models.DB.Negocio_Vinculo_Modulo

@{
    ViewBag.Title = "EditarVinculoModulo";
}

<h2>EditarVinculoModulo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Vinculo_ID)
        @Html.HiddenFor(model => model.Modulo_ID)
        @Html.HiddenFor(model => model.Matricula_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Status_Vinculo, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{var listItem = new List<SelectListItem>
                    {
                      new SelectListItem { Text = "Em Curso", Value = "EC" },
                      new SelectListItem { Text = "Dependencia", Value = "DP" },
                      new SelectListItem { Text = "Matricula trancada", Value = "MT" },
                      new SelectListItem { Text = "Reprovado", Value = "RP" },
                      new SelectListItem { Text = "Aprovado", Value = "AP" }
                    };
                }
                @Html.DropDownList("Status_Vinculo", new SelectList(listItem, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status_Vinculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
