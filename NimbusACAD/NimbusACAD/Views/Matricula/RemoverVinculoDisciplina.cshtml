@model NimbusACAD.Models.DB.Negocio_Vinculo_Disciplina

@{
    ViewBag.Title = "RemoverVinculoDisciplina";
}

<h2>RemoverVinculoDisciplina</h2>

<h3>Você tem certeza de que deseja remover este vinculo e todas as informações referentes, esta operação não poderá ser desfeita?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Disciplina</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Disciplina.Disciplina_Nome)</dd>

        <dt>Aluno</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Matricula_Aluno.Negocio_Pessoa.Primeiro_Nome) @Html.DisplayFor(model => model.Negocio_Matricula_Aluno.Negocio_Pessoa.Sobrenome)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" />
        </div>
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}