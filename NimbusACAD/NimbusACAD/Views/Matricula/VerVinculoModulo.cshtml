@model NimbusACAD.Models.ViewModels.VerVinculoModuloViewModel

@{
    ViewBag.Title = "VerVinculoModulo";
}

<h2>VerVinculoModulo</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ModuloNM)</dt>
        <dd>@Html.DisplayFor(model => model.ModuloNM)</dd>

        <dt>@Html.DisplayNameFor(model => model.StatusVinculo)</dt>
        <dd>@Html.DisplayFor(model => model.StatusVinculo)</dd>
    </dl>
</div>

<p>Disciplinas</p>
<table class="table">
    @foreach (var item in Model.disciplinas)
    {
        <tr>
            <th>@Html.DisplayFor(modelItem => item.DisciplinaNM)</th> |
            <th>@Html.ActionLink("Detalhes", "VerVinculoDisciplina", new { discID = item.DisciplinaID, matID = Model.MatID })</th>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Editar", "EditarVinculoModulo", new { id = Model.VinculoID }) | 
    @Html.ActionLink("Remover", "RemoverVinculoModulo", new { id = Model.VinculoID}) | 
    @Html.ActionLink("Voltar", "VerAluno", new { id = Model.MatID})
</p>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}