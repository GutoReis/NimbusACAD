@model NimbusACAD.Models.DB.Negocio_Quadro_Horario

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Você tem certeza de que deseja remover este horário, esta operação não poderão ser desfeita?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Dia_Semana)</dt>
        <dd>@Html.DisplayFor(model => model.Dia_Semana)</dd>

        <dt>@Html.DisplayNameFor(model => model.Hora_Inicio)</dt>
        <dd>@Html.DisplayFor(model => model.Hora_Inicio)</dd>

        <dt>@Html.DisplayNameFor(model => model.Hora_Fim)</dt>
        <dd>@Html.DisplayFor(model => model.Hora_Fim)</dd>

        <dt>@Html.DisplayNameFor(model => model.Negocio_Disciplina.Disciplina_Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Negocio_Disciplina.Disciplina_Nome)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" />
        </div>
    }
</div>
