@model IEnumerable<NimbusACAD.Models.DB.Negocio_Funcionario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Negocio_Pessoa.Primeiro_Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Negocio_Tipo_Funcionario.Cargo)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Negocio_Pessoa.Primeiro_Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.Negocio_Tipo_Funcionario.Cargo)</td>
        <td>
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Funcionario_ID })
        </td>
    </tr>
}

</table>
